<h1>Listing deliveries</h1>
 <%= link_to "E-BURGER DELIVERIES ONLY", :controller => "deliveries", :action => 'e_burger_deliveries'%>
<table class="table table-bdeliveryed">
  <tr>
    <th>Name</th>
    <th>Number</th>
     <th>City</th>
    <th>Start</th>
    <th>Finish</th>
    <th>Content</th>
     <th>Weight</th>
    <th>Price</th>
    <th>One</th>
    <% if session[:admin_id]  %>
    <th>Two</th>
    <% end %>
  </tr>

<% @deliveries.each do |delivery| %>
  <% if delivery.road == false %>
  <tr>
    <td><%= delivery.name %></td>
    <td><%= delivery.number %></td>
     <td><%= delivery.city %></td>
    <td><%= delivery.start %></td>
    <td><%= delivery.finish %></td>
    <td><%= delivery.content %></td>
    <td><%= delivery.weight %></td>
    <td><%= delivery.price %></td>
    <td><%= link_to 'Watch for tansporting', edit_delivery_path(delivery) %></td>
    <% if session[:admin_id]  %>
    <td><%= link_to 'Destroy', delivery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    <% end %>
  </tr>
  <% end %>
<% end %>
